{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "blocks.paragraph",
        "blocks.paragraph-with-image",
        "blocks.hero",
        "blocks.full-image"
      ]
    }
  }
}
